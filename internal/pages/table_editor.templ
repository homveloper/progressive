			function exportTableData() {
				const exportOptions = [
					{ label: 'JSON í˜•ì‹ìœ¼ë¡œ ë‚´ë³´ë‚´ê¸°', action: 'json' },
					{ label: 'CSV í˜•ì‹ìœ¼ë¡œ ë‚´ë³´ë‚´ê¸°', action: 'csv' },
